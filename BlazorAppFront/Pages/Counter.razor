@page "/counter"

@using BlazorAppFront.Services
@inject UserServices UserService

<h3>Meeting Links</h3>

@if (meetingLinks == null)
{
    <p>Loading meeting links...</p>
}
else if (!meetingLinks.Any())
{
    <p>No meeting links available</p>
}
else
{
    <div class="link-container">
        @foreach (var link in meetingLinks)
        {
            <div class="link-card">
               
                    <h5>@link.Link</h5>
            
                </div>
            }
    </div>
}

@code {
    private IEnumerable<MeetingLink2> meetingLinks;

    protected override async Task OnInitializedAsync()
    {
        meetingLinks = await UserService.getlinks();
    }
}


